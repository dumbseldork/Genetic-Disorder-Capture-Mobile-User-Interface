<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Eczema"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/eczpic"
        android:layout_width="379dp"
        android:layout_height="572dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/neurofibromatosis"
        tools:layout_editor_absoluteX="2dp" /> />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp"
        android:fontFamily="@font/bebasbook"
        android:text="Neurofibromatosis is a genetic disorder that causes tumors to form on nerve tissue. These tumors can develop anywhere in your nervous system, including your brain, spinal cord and nerves. Neurofibromatosis is usually diagnosed in childhood or early adulthood.The tumors are usually noncancerous (benign), but sometimes can become cancerous (malignant). Complications of neurofibromatosis can include hearing loss, learning impairment, heart and blood vessel (cardiovascular) problems, loss of vision, and severe pain."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="414dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/eczpic"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bebasbold"
        android:text="@string/back"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

</RelativeLayout>