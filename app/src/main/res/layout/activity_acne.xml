<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acne"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/acne"
        android:layout_width="379dp"
        android:layout_height="572dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/criduchatsyndrome"
        tools:layout_editor_absoluteX="2dp" />


    <TextView
        android:id="@+id/acne_desc"
        android:layout_width="304dp"
        android:layout_height="147dp"
        android:layout_alignEnd="@+id/acne"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/bebasbook"
        android:text="                                              Cri-du-chat (cat's cry) syndrome,
                           also known as 5p- (5p minus) syndrome, is a
               chromosomal condition that results when a piece of chromosome 5 is missing. Symptoms include  high-pitched cat-like cry, mental retardation, delayed development, distinctive facial features, small head size, widely-spaced eyes (hypertelorism), low birth weight and weak muscle tone (hypotonia) in infancy."
        android:textColor="#000000"
        android:textSize="14dp" /> />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/acne"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bebasbold"
        android:text="@string/back"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible" />

</RelativeLayout>